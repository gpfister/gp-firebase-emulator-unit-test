{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es2017": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "brace-style": "off",
    "max-len": "off",
    "space-before-function-paren": ["error", "never"],
    "semi": ["error", "always"],
    "semi-spacing": ["error", { "before": false, "after": true }],
    "semi-style": ["error", "last"]
  }
}
